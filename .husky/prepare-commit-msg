#!/bin/sh

if [ "$2" != "merge" ] && [ -z "$3" ]; then
  BRANCH_NAME=$(git symbolic-ref --short HEAD)
  if echo "$BRANCH_NAME" | grep -qE '[A-Z]+-[0-9]+'; then
    TICKET=$(echo "$BRANCH_NAME" | grep -oE '[A-Z]+-[0-9]+')
    echo "[$TICKET] $(cat "$1")" > "$1"
  fi
fi

#!/bin/sh

# Solo si no es un merge y no se pasa un mensaje explÃ­cito
if [ "$2" != "merge" ] && [ -z "$3" ]; then
  BRANCH_NAME=$(git symbolic-ref --short HEAD)
  echo "$(cat "$1")" > "$1 - [$BRANCH_NAME] "
fi
